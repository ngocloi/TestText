<?xml version="1.0" encoding="UTF-8"?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
           id="com.kofax.mobile.phonegap.imagecapture"
      version="0.1.0">
  <name>Kofax Mobile Capture</name>
  <description>Enables usage of the Kofax Mobile SDK 2.0 from mobile devices using a PhoneGap enabled application.</description>
  <license>MIT</license>
  <keywords>phonegap,kofax,mobile,capture</keywords>

  <js-module src="www/imagecapture.js" name="MobileSdk">
    <clobbers target="window.mobileSdk" />
  </js-module>

  <platform name="android">
    <config-file target="res/xml/config.xml" parent="/*">
      <feature name="MobileSdk">
        <param name="android-package" value="com.kofax.mobile.sdk.cordova.plugins.MobileSdkPlugin"/>
      </feature>
    </config-file>
    <config-file target="AndroidManifest.xml" parent="/manifest">
      <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
      <uses-permission android:name="android.permission.CAMERA" />
      <uses-feature android:name="android.hardware.camera" />
      <uses-feature android:name="android.hardware.camera.autofocus" />
    </config-file>

    <source-file src="src/android/MobileSdkPlugin.java" target-dir="src/com/kofax/mobile/sdk/cordova/plugins" />
    <source-file src="src/android/MobileException.java" target-dir="src/com/kofax/mobile/sdk/cordova/plugins" />
    <source-file src="src/android/actions/ActionNames.java" target-dir="src/com/kofax/mobile/sdk/cordova/plugins/actions" />
    <source-file src="src/android/actions/BarcodeCaptureAction.java" target-dir="src/com/kofax/mobile/sdk/cordova/plugins/actions" />
    <source-file src="src/android/actions/ImageCaptureAction.java" target-dir="src/com/kofax/mobile/sdk/cordova/plugins/actions" />
    <source-file src="src/android/actions/ImageProcessorAction.java" target-dir="src/com/kofax/mobile/sdk/cordova/plugins/actions" />
    <source-file src="src/android/actions/ImageReviewAction.java" target-dir="src/com/kofax/mobile/sdk/cordova/plugins/actions" />
    <source-file src="src/android/actions/MobileAction.java" target-dir="src/com/kofax/mobile/sdk/cordova/plugins/actions" />
    <source-file src="src/android/actions/MobileActionExecutor.java" target-dir="src/com/kofax/mobile/sdk/cordova/plugins/actions" />
    <source-file src="src/android/actions/MobileActionResult.java" target-dir="src/com/kofax/mobile/sdk/cordova/plugins/actions" />
  </platform>
  <platform name="ios">
    <config-file target="config.xml" parent="/*">
      <feature name="MobileSdk">
        <param name="ios-package" value="KFXMobileSdkPlugin" />
      </feature>
    </config-file>

    <header-file src="src/ios/KFXMobileSdkPlugin.h" />
    <source-file src="src/ios/KFXMobileSdkPlugin.m" />
    <header-file src="src/ios/ControlLayout.h" />
    <source-file src="src/ios/ControlLayout.m" />
    <header-file src="src/ios/WGHUtility.h" />
    <source-file src="src/ios/WGHUtility.m" />
  </platform>

  <dependencies>
  </dependencies>
</plugin>